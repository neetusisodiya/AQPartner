<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Adapter.AdapterOpenLead">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_ser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Service:" />

            <TextView
                android:id="@+id/txt_serv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_booking"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Service" />

            <TextView
                android:id="@+id/txt_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_serv"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Booking Date : " />

            <TextView
                android:id="@+id/txt_booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_serv"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_booking"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Booking Date" />

            <TextView
                android:id="@+id/txt_gaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_visit"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Address : " />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_visitDate"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_booking"
                android:fontFamily="@font/montserrat_semibold" />


            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_booking"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Qty : " />

            <TextView
                android:id="@+id/txt_qtynum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_booking_date"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_booking"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1" />

            <TextView
                android:id="@+id/txt_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_qtynum"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Visit Time : " />

            <TextView
                android:id="@+id/txt_visitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_qtynum"

                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_booking"
                android:fontFamily="@font/montserrat_semibold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_address"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/call_user"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_bg"
                    android:text="@string/contact_user"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_baseline_call_24"
                    android:drawablePadding="6dp"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/user_maps"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rzp_green_button"
                    android:drawableStart="@drawable/ic_baseline_directions_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="@string/directions"
                    android:textAllCaps="false"
                    android:textStyle="bold"

                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/btn_complete"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.2"
                    android:drawableStart="@drawable/ic_baseline_done_24"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:text="Completed"
                    android:background="@color/reddd"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>


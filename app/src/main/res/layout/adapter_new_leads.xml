<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Adapter.AdapterNewLeads">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_leads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txt_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="8107116566" />

            <TextView
                android:id="@+id/txt_bookingddate"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_contact"
                 android:layout_marginLeft="30dp"
                android:fontFamily="@font/lato_bold"
                android:text="25-8-2018" />
            <TextView
                android:id="@+id/txt_visittime"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="6-7 PM" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_visittime"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="Abhishek" />



            <TextView
                android:id="@+id/txt_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="Service" />
            <TextView
                android:id="@+id/txt_service2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_service"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato_bold"
                android:text="Service2" />

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_service2"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_edit_location_black_24dp"
                android:tint="@color/reddd" />

            <ImageView
                android:id="@+id/img_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_service2"
                android:layout_toRightOf="@+id/img_location"
                android:src="@drawable/ic_location_city"
                android:tint="@color/reddd" />
            <TextView
                android:id="@+id/txt_price"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_service"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/lato_bold"
                android:text="Price" />
            <Button
                android:id="@+id/accept"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@+id/txt_price"
                android:layout_alignParentEnd="true"
                android:background="@color/reddd"
                android:text="@string/acccept"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>


